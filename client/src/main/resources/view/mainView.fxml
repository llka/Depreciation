<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="470.0"
            prefWidth="664.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="depreciation.client.controller.MainController">
    <top>
        <MenuBar BorderPane.alignment="TOP_CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="Server">
                    <items>
                        <MenuItem fx:id="menuServerConnect" mnemonicParsing="false" onAction="#connectToServer"
                                  text="Connect"/>
                        <MenuItem fx:id="menuServerDisconnect" disable="true" mnemonicParsing="false"
                                  onAction="#disconnectFromServer" text="Disconnect"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Authentication">
                    <items>
                        <MenuItem fx:id="menuRegister" disable="true" mnemonicParsing="false" onAction="#register"
                                  text="Register"/>
                        <MenuItem fx:id="menuLogIn" disable="true" mnemonicParsing="false" onAction="#login"
                                  text="Log in"/>
                        <MenuItem fx:id="menuLogOut" disable="true" mnemonicParsing="false" onAction="#logOut"
                                  text="Log out"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Profile">
                    <items>
                        <MenuItem fx:id="menuMyProfile" disable="true" mnemonicParsing="false"
                                  onAction="#openMyProfileView" text="My Profile"/>
                        <MenuItem fx:id="menuManageUsersProfiles" disable="true" mnemonicParsing="false"
                                  onAction="#openManageUsersView" text="Manage Profiles"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Company">
                    <items>
                        <MenuItem fx:id="menuMyCompanies" disable="true" mnemonicParsing="false"
                                  onAction="#openMyCompaniesView" text="My Companies"/>
                        <MenuItem fx:id="menuNewCompany" disable="true" mnemonicParsing="false"
                                  onAction="#openNewCompanyView" text="New Company"/>
                        <MenuItem fx:id="menuAllCompanies" disable="true" mnemonicParsing="false"
                                  onAction="#openAllCompaniesView" text="All Companies"/>
                        <MenuItem fx:id="menuGenerateReport" mnemonicParsing="false" onAction="#generateReport"
                                  text="Generate Excel Report"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>
